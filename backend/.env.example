# ===== API base config =====
API_BASE_URL=https://your-domain-or-ngrok.example
API_VERSION=v1
API_BASE_PATH=api
API_KEY=change-me-optional-shared-key
PORT=3000

# ===== Auth / Tokens =====
# Long random string for signing JWTs
JWT_SECRET=please-generate-a-long-random-secret

# ===== Email (SMTP) =====
SMTP_SERVER=smtp.example.com
SMTP_PORT=587
SMTP_USER=no-reply@example.com
SMTP_PASS=change-me
# true = SMTPS (465), false = STARTTLS (587)
SMTP_SECURE=false

# ===== AWS / DynamoDB / SQS / S3 =====
# Single-table name and region used by DynamoDBInterface
DB_TABLE_NAME=kudupay-dev
DB_TABLE_REGION=af-south-1

# Preferred AWS region for SDK calls (may match DB_TABLE_REGION)
MY_AWS_REGION=af-south-1

# Optional: SQS FIFO queue for async processing
SQS_QUEUE_URL=https://sqs.af-south-1.amazonaws.com/123456789012/your-queue.fifo

# Public assets / uploads
S3_BUCKET=your-public-bucket
S3_REGION=eu-west-1

# ===== Public URLs =====
# Used when generating QR codes and links shown to users
PUBLIC_QR_BASE_URL=https://www.example.com
# Where QR should send the payer after scan
QR_DESTINATION_URL=https://www.example.com/pay?paymentId={paymentId}
# Payments API base used by backend to talk to the pay service
PAY_API_URL=https://pay.example.com

# ===== Admin bootstrap (optional) =====
# Used by backend/scripts/generate_admin_json.js when you need a temp admin user JSON
ADMIN_EMAIL=admin@yourdomain.test
ADMIN_PASSWORD=AdminPassword
ADMIN_FIRST_NAME=Admin
ADMIN_LAST_NAME=Admin